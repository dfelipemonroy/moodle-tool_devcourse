{{!
    @template tool_devcourse/entries_list

    Template for the tool_devcourse entries list

    Example context (json):
    {
        "courseid": 2,
        "coursename": "Test course",
        "contents": "List of entries",
        "addlink": "#"
    }
}}

{{#enabled}}
    <div class="entries_list" data-courseid="{{courseid}}">
        <h2>{{#str}} helloworld, tool_devcourse {{/str}}</h2>
        <p>{{#str}} youareviewing , tool_devcourse , {{courseid}} {{/str}}</p>
        <p>{{{coursename}}}</p>

        {{{contents}}}
    </div>

    {{#addlink}}
        <a href="{{{.}}}">
            <button class="btn btn-primary">{{#str}} newentry, tool_devcourse {{/str}}</button>
        </a>
    {{/addlink}}
{{/enabled}}
{{^enabled}}
    <div class="alert alert-warning">
        {{#str}} devcourse_disabled, tool_devcourse {{/str}}
    </div>
{{/enabled}}

{{#js}}
    require([
        'tool_devcourse/confirmation'
    ], function(c) {
        c.init('[data-action=deleteentry]');
    });
{{/js}}
